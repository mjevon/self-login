<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.leon.repository.RoleRepository">

    <select id="queryList" resultType="cn.leon.bo.RoleBo">
        SELECT
            *
        FROM sys_role
    </select>

    <insert id="insertList">
        INSERT INTO sys_role
          (
            id,
            role,
            name,
            modules,
            describe
          )
        <foreach collection="roles" item="r" open="VALUES (" separator="), (" close=")">
            #{r.id,jdbcType=INT},
            #{r.role,jdbcType=VARCHAR},
            #{r.name,jdbcType=VARCHAR},
            #{r.modules,jdbcType=TEXT},
            #{r.describe,jdbcType=TEXT}
        </foreach>
    </insert>
</mapper>