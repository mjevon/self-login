<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.leon.repository.UserRepository">

    <select id="queryList" resultType="cn.leon.bo.UserBo">
        SELECT
            *
        FROM sys_user
    </select>

    <insert id="insertList">
        INSERT INTO sys_user
          (
            id,
            name,
            loginName,
            password,
            email
          )
        <foreach collection="users" item="u" open="VALUES (" separator="), (" close=")">
            #{u.id,jdbcType=INT},
            #{u.name,jdbcType=VARCHAR},
            #{u.loginName,jdbcType=VARCHAR},
            #{u.password,jdbcType=VARCHAR},
            #{u.email,jdbcType=VARCHAR}
        </foreach>
    </insert>
</mapper>